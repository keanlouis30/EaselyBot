# Facebook Messenger Configuration
# Get these from your Facebook App in the Facebook Developer Console

# Verify token for webhook validation (you create this)
VERIFY_TOKEN=your_verify_token_here

# Page access token from Facebook App (generated by Facebook)
PAGE_ACCESS_TOKEN=your_page_access_token_here

# App secret from Facebook App (generated by Facebook)
APP_SECRET=your_app_secret_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Canvas API Configuration (for future integration)
CANVAS_API_URL=https://canvas.instructure.com
CANVAS_API_VERSION=v1

# Database Configuration (for future PostgreSQL integration)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Ko-fi Configuration (for premium subscriptions)
KOFI_WEBHOOK_SECRET=your_kofi_webhook_secret

# Admin Dashboard Configuration
# Generate a secure random token for authenticating admin API requests
# Example: openssl rand -hex 32
ADMIN_API_TOKEN=your_secure_admin_token_here
