# EaselyBot Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===================================
# FACEBOOK MESSENGER CONFIGURATION
# ===================================
# Get these from Facebook Developer Console > Your App > Messenger > Settings
PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here
VERIFY_TOKEN=your_webhook_verification_token_here
GRAPH_API_URL=https://graph.facebook.com/v17.0

# ===================================
# CANVAS LMS CONFIGURATION
# ===================================
CANVAS_BASE_URL=https://your-school.instructure.com
CANVAS_API_VERSION=v1

# ===================================
# DATABASE CONFIGURATION (SUPABASE)
# ===================================
# Get these from your Supabase project dashboard
# Project Settings > API > URL and API Keys
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_public_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_secret_key_here

# Legacy PostgreSQL support (optional, for migration)
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=easely_db
DB_USER=easely_user
DB_PASSWORD=your_db_password_here

# ===================================
# APPLICATION CONFIGURATION
# ===================================
APP_ENV=production
DEBUG=false
PORT=10000
SECRET_KEY=your-super-secret-key-here-change-this

# ===================================
# WEBHOOK URLS (UPDATE AFTER DEPLOYMENT)
# ===================================
# Replace 'your-app-name' with your actual Render service name
WEBHOOK_URL=https://your-app-name.onrender.com/webhook
PRIVACY_POLICY_URL=https://easelyprivacypolicy.onrender.com
TERMS_OF_USE_URL=https://easelytermsofuse.onrender.com
VIDEO_TUTORIAL_URL=https://easely.app/tutorial

# ===================================
# PAYMENT CONFIGURATION (Optional)
# ===================================
KOFI_WEBHOOK_TOKEN=your_kofi_webhook_token_here
KOFI_SHOP_URL=https://ko-fi.com/easely

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_AI_FEATURES=false
ENABLE_PREMIUM=true

# ===================================
# TASK MANAGEMENT SETTINGS
# ===================================
MAX_FREE_TASKS_PER_MONTH=5

# ===================================
# RATE LIMITING
# ===================================
API_RATE_LIMIT=100
CANVAS_API_BATCH_SIZE=10

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=INFO
LOG_FILE=easely.log

# ===================================
# TIMEZONE CONFIGURATION
# ===================================
DEFAULT_TIMEZONE=UTC